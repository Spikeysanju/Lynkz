<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/outline_corners_curve"
        android:scaleType="centerCrop"
        android:id="@+id/newsImg"/>


    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsImg"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="The Verge"
        android:fontFamily="@font/googlesans_bold"
        android:textColor="@color/black"
        android:textSize="22sp" />



    <TextView
        android:id="@+id/newsDescription"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsTitle"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="Elon Musk Says Tesla Customers May Face Longer Response"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/newsAuthor"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsDescription"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/googlesans_regular"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/newsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/newsAuthor"
        android:layout_alignBottom="@+id/newsAuthor"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="5dp"
        android:layout_alignRight="@id/newsAuthor"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/googlesans_regular"
        android:padding="10dp"
        android:textColor="@color/gray"
        android:textSize="16sp" />








</RelativeLayout>

